<% action_url = track.persisted? ? track_url(track) : tracks_url  %>
<% http_method = track.persisted? ? "PATCH" : POST %>

<form action=" <%= action_url %>" method = "Post">
  <input type = "hidden" name="_method" value=" <%= http_method %>">
  <input
    type="hidden"
    name="authenticity_token"
    value=" <%= form_authenticity_token %>">

<p>

  <label>Title
    <input type="text" name="track[title]" value=" <%= track.title %>">
  </label>
</p>



<p>
  <label>Album
    <select name="track[album_id]">
      <% Album.all.each do |album|  %>
        <option
          <%= "selected" if track.album_id == track.id %>
          value = "<%=album.id%>"
          <%= album.name %>
        </option>
      <%end %>
    </select>
  </label>
</p>

<p>
  <input
      type="radio"
      name="track[bonus]"
      id="track_bonus_t"
      value="t"
    <%= "checked" if track.bonus %>>
  <label for="track_bonus_t">Bonus</label>

  <br>
  <input type="radio" name="track[bonus]" id="track_bonus_f" value="f"

  <%= track.bonus == "Bonus" ? "checked" : "" %>>
        <label for="track_bonus_f">Regular</label>
  </label>
</p>

<p>
  <input
    type="textarea"

<input type="submit">
</form>
